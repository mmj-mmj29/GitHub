// Jenkinsfile
pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                echo 'Cloning repository...'
                checkout scm
            }
        }
        stage('Build') {
            steps {
                echo 'Building the project...'
                sh './mvnw clean package' // or 'mvn clean package' if you use Maven
            }
        }
        stage('Docker Build') {
            steps {
                echo 'Building Docker image...'
                sh 'docker build -t myapp:latest .'
            }
        }
        stage('Test') {
            steps {
                echo 'Running tests...'
                sh './mvnw test' // or 'mvn test'
            }
        }
    }
    post {
        always {
            echo 'Pipeline finished.'
        }
    }
}