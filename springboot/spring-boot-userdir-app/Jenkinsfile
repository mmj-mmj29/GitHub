pipeline {
    agent any
    stages {
        stage('Checkout') {
            steps {
                echo 'Checking out source code...'
                checkout scm
            }
        }
        stage('Build JAR') {
            steps {
                echo 'Building the Spring Boot JAR...'
                sh 'mvn clean package -DskipTests'
            }
        }
        stage('Build Docker Image') {
            steps {
                echo 'Building the Docker image...'
                sh 'docker build -t userdir-app .'
            }
        }
        // Optional: Add more stages for push, deploy, etc.
    }
}